<?xml version='1.0' encoding='utf-8'?>
<interface>
  <object class="tk.Toplevel" id="main_window">
    <property name="height">200</property>
    <property name="title" translatable="yes">Board Royale</property>
    <property name="width">200</property>
    <child>
      <object class="tk.Entry" id="user_entry">
        <property name="text" translatable="yes">Player name</property>
        <layout>
          <property name="column">0</property>
          <property name="padx">10</property>
          <property name="pady">10</property>
          <property name="propagate">True</property>
          <property name="row">0</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="tk.Button" id="add_player_button">
        <property name="command">add_player</property>
        <property name="text" translatable="yes">Add player</property>
        <layout>
          <property name="column">2</property>
          <property name="padx">10</property>
          <property name="pady">10</property>
          <property name="propagate">True</property>
          <property name="row">0</property>
          <property name="sticky">w</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="tk.Button" id="start_button">
        <property name="text" translatable="yes">Start</property>
        <layout>
          <property name="column">2</property>
          <property name="padx">10</property>
          <property name="pady">10</property>
          <property name="propagate">True</property>
          <property name="row">1</property>
          <property name="sticky">se</property>
        </layout>
      </object>
    </child>
  </object>
</interface>
